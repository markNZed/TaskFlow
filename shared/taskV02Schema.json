{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Task",
  "definitions": {
    "Task": {
      "title": "Task Object Definition",
      "type": "object",
      "additionalProperties": {},
      "$comment": "We do not want the . character in object keys",
      "propertyNames": {
        "pattern": "^((?!\\.).)*$"
      },
      "properties": {
        "ceps": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["*"]
            },
            {
              "type": "object"
            }
          ]
        },
        "command": {
          "type": ["null", "string"]
        },
        "commandArgs": {
          "type": ["null", "object"]
        },
        "commandDescription": {
          "type": "string"
        },
        "error": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "object"
            }
          ]
        },
        "familyId": {
          "type": "string"
        },
        "groupId": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "operators": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["*"]
            },
            {
              "type": "object"
            }
          ]
        },
        "parentName": {
          "type": "string"
        },              
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "node": {
          "type": "object"
        },
        "services": {
          "anyOf": [
            {
              "type": "string",
              "enum": ["*"]
            },
            {
              "type": "object"
            }
          ]
        },        
        "type": {
          "type": "string"
        },
        "user": {
          "type": "object"
        },
        "versionExternal": {
          "type": "string"
        },
        "versionInternal": {
          "type": "string"
        },
        "privacy": {
          "$ref": "./genericV02schema.json#/definitions/Privacy"
        },
        "input": {
          "$ref": "./genericV02schema.json#/definitions/Input"
        },
        "meta": {
          "$ref": "./genericV02schema.json#/definitions/Meta"
        },
        "output": {
          "$ref": "./genericV02schema.json#/definitions/Output"
        },
        "config": {
          "$ref": "./genericV02schema.json#/definitions/Config"
        },
        "fsm": {
          "$ref": "./genericV02schema.json#/definitions/FSM"
        },
        "state": {
          "$ref": "./genericV02schema.json#/definitions/State"
        },
        "nodes": {
          "$ref": "./genericV02schema.json#/definitions/Nodes"
        },
        "users": {
          "$ref": "./genericV02schema.json#/definitions/Users"
        },
        "hub": {
          "$ref": "./genericV02schema.json#/definitions/Hub"
        },
        "request": {
          "$ref": "./genericV02schema.json#/definitions/Request"
        },
        "response": {
          "$ref": "./genericV02schema.json#/definitions/Response"
        },
        "shared": {
          "$ref": "./genericV02schema.json#/definitions/Shared"
        }
      }
    }
  }
}
