                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "children": {
                    "type": "array",
                    "items": {}
                },
                "client_prompt": {
                    "type": "string"
                },
                "component": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "component_depth": {
                    "type": "integer"
