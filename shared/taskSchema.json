                "input_label": {
                    "type": "string"
                },
                "instanceId": {
                    "type": "string"
                },
                "instruction": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "last_change": {
                    "type": "string"
                },
                "menu": {
                    "type": "boolean"
                },
                "messages": {
                    "type": "array",
